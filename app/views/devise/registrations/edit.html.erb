<div class="container">
  <div class="py-5 text-center">
    <img class="d-block mx-auto mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <p class="lead">Your profile info is loaded below. <br>
    You can press back if don't want to change anything</p>
  </div>

  <div class="row">
    <div class="col-md-4 order-md-2 mb-4">
      <ul class="list-group mb-3">
        
        <li class="list-group-item justify-content-between">
          <span><%= link_to "<< Back", :back, class:"btn btn-light btn-md btn-block" %></span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
          <span>Are you unhappy?</span>
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
        </li>
      </ul>
    </div>
    <div class="col-md-8 order-md-1">
      <h4 class="mb-3">Profile info</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <!--<div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstName">First name</label>
            <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
        </div>-->

        <div class="mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, id: "email", class: "form-control" %>
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-3">
          <%= f.label :password %> <span class="text-muted">(leave blank if you don't want to change it)</span><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "address"%>
          <% if @minimum_password_length %>
            <br />
             <div class="invalid-feedback">
              <%= @minimum_password_length %> characters minimum
            </div>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "address2"%>
        </div>
        <div class="mb-3">
          <%= f.label :current_password %> <span class="text-muted">(we need your current password to confirm your changes)</span><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", id: "address2"%>
        </div>
        <hr class="mb-4">
        <div class="actions">
          <%= f.submit "Update", class:"btn btn-primary btn-lg btn-block" %>
        </div>
        <hr class="mb-4">
      <% end %>
    </div>
  </div>
</div>
